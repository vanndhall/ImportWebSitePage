<Window x:Class="SimpleAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleAsync"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="528.5">
    <Grid>
        <Label Content="Simple Async App" VerticalAlignment="Top" Width="496" Height="40" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Margin="10,0,14,0" />
        <Button x:Name="executeSync" Content="Normal Execute" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="496" Height="44" Click="executeSync_Click" FontSize="16"/>
        <Button x:Name="executeAsync" Content="Async Execute" HorizontalAlignment="Left" Margin="10,108,0,0" VerticalAlignment="Top" Width="496" Height="44" Click="executeAsync_Click" FontSize="16"/>
        <TextBox x:Name="resultsWindow" HorizontalAlignment="Left" Height="237" Margin="10,172,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="496" FontSize="14"/>

    </Grid>
</Window>
